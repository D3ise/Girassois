<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eclipse.GamePage"
             Shell.NavBarIsVisible="False">

             <Frame x:Name= "Sobre"
             IsVisible= "true"
             Margin="10,20"
             CornerRadius="20"
             BackgroundColor="Green"
             HorizontalOptions="Fill"
             VerticalOptions="Fill">

             <Grid>
              <Grid.RowDefinitions>
              <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
             <RowDefinition Height="60"/>
         </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
         </Grid.ColumnDefinitions>

         <Image Source="imginicio.jpg"
          Aspect="AspectFill"
          Grid.Row= "1"
          Grid.Column="0"
          Grid.ColumnSpan="2"/>

           <Button Text= "X"
              Grid.Row= "0"
              Grid.Column= "1"
              Clicked= "Voltar"
              TextColor="Black"/>

              <Label Text= "Você está a caminho da nova casa de sua avó, e para chegar até lá terá que atravessar um labirinto onde encontrará muitos desafios. Tem certeza que está preparado(a)?"
              Grid.Row= "2"
              Grid.Column= "0"
              Grid.ColumnSpan="2"
              VerticalOptions= "Center"
              FontSize="14"
              TextColor= "Black"/>

             <Button Text= "SIM"
              Grid.Row= "3"
              Grid.Column= "0"
              Grid.ColumnSpan="2"
              HeightRequest="40"
              CornerRadius="30"
              TextColor="Black"/>

             <Button Text= "NÃO"
              Grid.Row= "4"
              Grid.Column= "0"
              Grid.ColumnSpan="2"
              HeightRequest="40"
              CornerRadius="30"
              TextColor="Black"/>


            
</Grid>
 </Frame>
</ContentPage>