<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eclipse.MainPage"
             Shell.NavBarIsVisible="False">

<Grid>
    <Image Source ="selvagem.jpg"
    Aspect="AspectFill"/>
    
      <VerticalStackLayout
        VerticalOptions="End"
        Spacing="10"
        Margin="15,0,15,40"/>

        <Button Text="INICIAR"
        Clicked="Start"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center"
        Margin="0,400,0,0"
        HeightRequest="50"
        CornerRadius="30"
        TextColor="Black"
        BackgroundColor="#85a340"
        FontAttributes="Bold"
        FontSize="20"/> 

         <Button Text="SOBRE"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="End"
         Margin="0,0,0,60"
        HeightRequest="50"
        CornerRadius="30"
        TextColor="Black"
        BackgroundColor="#85a340"
        FontAttributes="Bold"
        FontSize="20"/> 

         

</Grid>
</ContentPage>
